{
  "name": "switchboard",
  "version": "0.1.0",
  "description": "Stdio proxy MCP: one top-level tool per MCP, lazy subtool expansion.",
  "license": "MIT",
  "type": "module",
  "bin": {
    "switchboard": "./dist/switchboard"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "switchboard.config.schema.json",
    "mcp-descriptions.json"
  ],
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --external:globby --external:fast-glob --external:fs --external:path --external:os --external:child_process --external:util --external:events --external:stream --external:url --outfile=dist/index.js && echo '#!/usr/bin/env node\\nimport(\"./index.js\");' > dist/switchboard && chmod +x dist/switchboard",
    "build:watch": "tsc --project tsconfig.json --watch",
    "dev": "ts-node src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "release": "semantic-release"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "globby": "^14.1.0",
    "read-pkg-up": "^11.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.3",
    "@types/node": "^22.18.5",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/ui": "^2.1.9",
    "esbuild": "^0.24.2",
    "eslint": "^9.35.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18"
  }
}
